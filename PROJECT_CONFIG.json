  "privacy_ethics": {
    "principles": [
      {
        "principle": "Minimize Data Collection",
        "implementation": "Only collect necessary health/nutrition data; no diagnosis"
      },
      {
        "principle": "Pseudonymization",
        "implementation": "User IDs hashed; dietary data separated from PII"
      },
      {
        "principle": "Transparent Explanations",
        "implementation": "Every recommendation includes rationale & data sources"
      },
      {
        "principle": "User Control",
        "implementation": "Delete data anytime; opt-in for analytics"
      },
      {
        "principle": "Audit Trail",
        "implementation": "All data transformations logged (PIIFilter)"
      }
    ],
